                                                           HorizontalAlignment="Left"
                                                           VerticalAlignment="Center"
                                                           FontSize="20">

                                        </TextBlock>

                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <WrapPanel Visibility="{Binding WPVisibility}" Grid.Row="5" VerticalAlignment="Center">
                            <TextBox FontSize="20" TextWrapping="Wrap" Width="400"
